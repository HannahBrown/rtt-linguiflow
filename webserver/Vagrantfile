Vagrant.configure(2) do |config|
    config.vm.box = "ubuntu/trusty64"
    config.vm.synced_folder "data/", "/var/www/project"
    config.vm.synced_folder "files/", "/etc/puppet/files"
    config.vm.network "forwarded_port", guest: 3000, host: 3000
    config.vm.provision "file", source: "files/linguiflow.conf", destination: "/home/vagrant/linguiflow.conf"
    config.vm.provision "shell", inline: "sudo mv /home/vagrant/linguiflow.conf /etc/init/linguiflow.conf && sudo chown root:root /etc/init/linguiflow.conf && sudo chmod 0644 /etc/init/linguiflow.conf"
    config.vm.provision "puppet" do |p|
        p.module_path = "puppet/modules"
        p.manifests_path = "puppet/manifests"
    end
end